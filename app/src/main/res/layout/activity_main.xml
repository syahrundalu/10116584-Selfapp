<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingVertical="@dimen/jarak_20dp"
            android:layout_height="wrap_content"
            android:text="Sanctuary"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/jarak_20dp"
            android:layout_margin="@dimen/jarak_20dp"
            android:background="@drawable/purplebox"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/get_started_tag"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:layout_marginBottom="@dimen/jarak_20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12sp"
                android:text="@string/get_started_det"
                android:textAlignment="center"
                android:fontFamily="@font/regular"
                android:textColor="@color/white"/>

            <LinearLayout
                android:id="@+id/getstarted"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingVertical="@dimen/jarak_12dp"
                android:layout_marginTop="@dimen/jarak_20dp"
                android:gravity="center"
                android:background="@drawable/whitebox"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/gmail"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/bold"
                android:layout_marginLeft="@dimen/jarak_20dp"
                android:textColor="@color/black"
                android:text="Login With GMail"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingHorizontal="56dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Way"
                android:textSize="36dp"
                android:textColor="@color/black"
                android:fontFamily="@font/bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Share"
                android:textSize="@dimen/text_size_18sp"
                android:fontFamily="@font/regular"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Comfy Music"
                android:textSize="@dimen/text_size_18sp"
                android:fontFamily="@font/regular"
                android:textColor="@color/black"/>
        </LinearLayout>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>